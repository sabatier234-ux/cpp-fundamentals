#include <iostream>
#include <cstdlib>
using namespace std;

int main() {

	int arr[10][10];
	int nextarr[10][10];
	int num;

	cout << "Enter number of generations: ";
	cin >> num;

	
	for (int i = 0; i < 10; i++) {
		for (int j = 0; j < 10; j++) {
			arr[i][j] = rand() % 2;  
		}
	}

	
	for (int gen = 1; gen <= num; gen++) {

		cout << "\nGeneration " << gen << endl;

		
		for (int i = 0; i < 10; i++) {
			for (int j = 0; j < 10; j++) {
				cout << arr[i][j] << " ";
			}
			cout << endl;
		}

		
		for (int i = 0; i < 10; i++) {
			for (int j = 0; j < 10; j++) {

				int neighbors = 0;

				
				if (i > 0 && j > 0)
					neighbors += arr[i - 1][j - 1];

				
				if (i > 0)
					neighbors += arr[i - 1][j];

				
				if (i > 0 && j < 9) 
					neighbors += arr[i - 1][j + 1];

				
				if (j > 0)
					neighbors += arr[i][j - 1];

				
				if (j < 9)
					neighbors += arr[i][j + 1];

				
				if (i < 9 && j > 0)
					neighbors += arr[i + 1][j - 1];

				
				if (i < 9) neighbors += arr[i + 1][j];

				
				if (i < 9 && j < 9)
					neighbors += arr[i + 1][j + 1];

				

				if (arr[i][j] == 1) {  

					if (neighbors < 2) 
						nextarr[i][j] = 0; 
					else if (neighbors > 3)
						nextarr[i][j] = 0;  
					else 
						nextarr[i][j] = 1;  
				}
				else {  

					if (neighbors == 3)
						nextarr[i][j] = 1;  
					else 
						nextarr[i][j] = 0;  
				}
			}
		}

		
		for (int i = 0; i < 10; i++) {
			for (int j = 0; j < 10; j++) {
				arr[i][j] = nextarr[i][j];
			}
		}
	}
	system("pause");
	return 0;
}
